<!-- search results from API -->

<!DOCTYPE html>
<html lang="en">

<%- include('../../layout/head') %>

<body>
  <a href="/" class="home-button">Home</a>
  <h1>Search Results</h1>
  <% bookArray.forEach(book => { %>
  <article>
    <img src="<%= book.image_url%>" alt="<%= book.title %>">
    <h2><%= book.title %></h2>
    <h4><%= book.author %></h4>
    <p class="book-summary"><%= book.description %></p>
    <!-- <button type="submit" action="/details/<%= book.isbn %>" method="post">View Details</button> -->
    <a href="/details/<%= book.isbn %>">View Details</a>
  </article>
  <% }) %>
</body>

</html>